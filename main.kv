#:kivy 2.1.0

#:import NoTransition kivy.uix.screenmanager.NoTransition
#:include screen_splash.kv
#:include screen_setting.kv
#:include screen_data.kv
#:include screen_graph.kv

ScreenManager:
    id: screen_manager
    transition: NoTransition()
    Screen:
        name: 'screen_splash'
        ScreenSplash:
            app_window: app
            screen_manager: screen_manager
            screen_setting: screen_setting

    Screen:
        name: 'screen_setting'
        ScreenSetting:
            id: screen_setting
            screen_manager: screen_manager

    Screen:
        name: 'screen_data'
        ScreenData:
            id: screen_data
            screen_manager: screen_manager
         
    Screen:
        name: 'screen_graph'
        ScreenGraph:
            id: screen_graph
            screen_manager: screen_manager
                  
